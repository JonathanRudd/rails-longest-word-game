<h1>New Game</h1>
<p>What is the longest word you can find?</p>
<%= @letters %>

<form action="/score" method="post">
  <input type="text" name="word" value="<%= params[:word] %>" placeholder="Type your word here">
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="letters" name="letters" type="hidden" value="<%= @letters %>"/>
</form>
